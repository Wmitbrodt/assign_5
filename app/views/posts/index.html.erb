<!-- Main jumbotron for a primary marketing message or call to action -->
      <div class="container" style="padding-top: 25px;">
        <div class="row">
          <div class="col-sm-8">
            <div class="blog">
              <div class="image_wrapper">
                  <img src="http://www.travelzoo.com/uk/blog/wp-content/uploads/2016/04/tzoo.blog_.uk_.Trolltunga.jpg" alt="">
              </div>
              <div class="row">
               <div class="col-xs-8">
                 <h5>
                   <span>
                     <i class="fa fa-heart-o" aria-hidden="true"></i>
                   </span>
                   <%= Faker::Number.number(3) %>
                 </h5>
                </div>
                <div class="col-xs-4">
                  <h5 style="float: right;">
                    <span>
                      <i class="fa fa-bookmark-o" aria-hidden="true"></i>
                    </span>
                  </h5>
                </div> <!-- col -->
              </div> <!-- row -->

              <div class="row">
                <% @post.each_with_index do |p, index| %>
                  <% if index === 0 %>
                <div class="col-sm-12">
                  <h3>
                    <%= link_to p.title, post_path(p) %>
                  </h3>
                </div>
              </div>

              <p>
                <%= link_to p.body[0..200], post_path(p) %>...
              </p>

              <p class="date-name">
                  <u>
                    <%= p.user.full_name %>
                  </u>
              </p>
              <p class="date-name">
                  <%= p.created_at.strftime("%Y-%m-%d") %>
              </p>
            </div>
          </div>

          <div class="col-sm-4">
            <h3>Most liked</h3>
              <p><a href="#"><u id="most-liked"><%= Faker::Hipster.sentence(1) %></u></a></p>
              <p><a href="#"><u id="most-liked"><%= Faker::Hipster.sentence(1) %></u></a></p>
              <p><a href="#"><u id="most-liked"><%= Faker::Hipster.sentence(1) %></u></a></p>
              <p><a href="#"><u id="most-liked"><%= Faker::Hipster.sentence(1) %></u></a></p>
              <p><a href="#"><u id="most-liked"><%= Faker::Hipster.sentence(1) %></u></a></p>
              <p><a href="#"><u id="most-liked"><%= Faker::Hipster.sentence(1) %></u></a></p>
          </div>
        </div> <!-- row -->

      </div> <!-- container -->

      <% else %>




        <div class="col-md-4">
          <div class="blog">
            <div class="image_wrapper">
                <img src="https://pbs.twimg.com/profile_images/608008626897166337/JLoiFMIw.jpg" alt="">
            </div>
            <div class="row">
             <div class="col-xs-8">
               <h5>
                 <span>
                   <i class="fa fa-heart-o" aria-hidden="true"></i>
                 </span>
                 <%= Faker::Number.number(2) %>
               </h5>
              </div>
              <div class="col-xs-4">
                <h5 style="float: right;">
                  <span>
                    <i class="fa fa-bookmark-o" aria-hidden="true"></i>
                  </span>
                </h5>
              </div> <!-- col -->
            </div> <!-- row -->

            <div class="row">
              <div class="col-sm-12">
                <h3>
                  <%= link_to p.title[0..25], post_path(p) %>...
                </h3>
              </div>
            </div>


              <% if p.body.length >= 25 %>
                <p><%= link_to p.body[0..30], post_path(p) %>...</p>
              <% else %>
                <p><%= link_to p.body, post_path(p) %></p>

                <p class="date-name">
                    <u>
                      <%= p.user.full_name %>
                    </u>
               </p>



            <p class="date-name">
                <%= p.created_at.strftime("%Y-%m-%d") %>
            </p>
          </div>
        </div>


      <% end %>

     <% end %>
    <% end %>
