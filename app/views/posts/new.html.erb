<h1>new post</h1>

<p><%= @post.errors.full_messages.join(',') %></p>
<%= form_for @post do |f| %>

  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>

  <div>
    <%= f.label :category %>
     <%= f.collection_select :category_id, Category.all, :id, :name %>
  </div>


  <%= f.submit %>

<% end %>
