<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <link href="https://fonts.googleapis.com/css?family=Della+Respira|Roboto" rel="stylesheet">
  </head>

  <body>

    <%= render 'layouts/header' %>
    <%#= render 'layouts/show' if current_page?(controller: 'posts', action: 'show')  %>
    <%= render :partial => "layouts/show"  if controller_name == "posts" && action_name == "show" %>


    <div class="container">
      <% flash.each do |key, value| %>
        <%= content_tag :div, value, class: "alert alert-#{key}" %>
      <% end %>

    <%= yield %>
</div>
    <%= render 'layouts/footer' %>



  </body>
</html>
